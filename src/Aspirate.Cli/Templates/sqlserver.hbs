---
apiVersion: v1
kind: ConfigMap
metadata:
  name: sqlserver-configuration
  labels:
    app: sqlserver
data:
  ACCEPT_EULA: "Y"
---
apiVersion: v1
kind: Secret
metadata:
  name: sqlserver-secrets
labels:
  app: sqlserver
type: Opaque
data:
  MSSQL_SA_PASSWORD: {{saPassword}}
---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: sqlserver-statefulset
  labels:
    app: sqlserver
spec:
  serviceName: "sqlserver"
  replicas: 1
  selector:
    matchLabels:
      app: sqlserver
  template:
    metadata:
      labels:
        app: sqlserver
    spec:
      containers:
        - name: sqlserver
          image: mcr.microsoft.com/mssql/server:2022-latest
          envFrom:
            - configMapRef:
                name: sqlserver-configuration
            - secretRef:
            name: sqlserver-secrets
          ports:
            - containerPort: 1433
              name: sqlserverdb
---
apiVersion: v1
kind: Service
metadata:
  name: sqlserver-service
  labels:
    app: sqlserver
spec:
  type: ClusterIP
  ports:
    - port: 1433
      name: sqlserver
  selector:
    app: sqlserver