{{#if withNamespace}}
namespace: {{namespace}}

{{/if}}
resources:
{{#each manifests}}
- {{this}}
{{/each}}

generatorOptions:
  disableNameSuffixHash: true

{{#if isService}}
configMapGenerator:
- name: {{name}}-env
  literals:
  {{#each env}}
    - {{@key}}={{this}}
  {{/each}}
    {{#if isProject}}
    - ASPNETCORE_URLS=http://+:8080
    {{/if}}

{{/if}}
{{#if hasAnySecrets}}
secretGenerator:
- name: {{name}}-secrets
  envs:
  - .{{name}}.secrets
{{/if}}