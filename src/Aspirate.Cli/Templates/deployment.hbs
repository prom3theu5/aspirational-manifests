---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{name}}
  labels:
    app: {{name}}
{{#if hasAnyAnnotations}}
  annotations:
  {{#each annotations}}
    {{@key}}: {{this}}
  {{/each}}
{{/if}}
spec:
  minReadySeconds: 60
  replicas: 1
  selector:
    matchLabels:
      app: {{name}}
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: {{name}}
{{#if hasAnyAnnotations}}
      annotations:
      {{#each annotations}}
        {{@key}}: {{this}}
      {{/each}}
{{/if}}
    spec:
    {{#if withPrivateRegistry}}
      imagePullSecrets:
      - name: image-pull-secret
    {{/if}}
      containers:
      - name: {{name}}
        image: {{containerImage}}
        imagePullPolicy: {{imagePullPolicy}}
        {{#if entrypoint}}
        command:
          - {{entrypoint}}
        {{/if}}
        {{#if hasArgs}}
        args:
        {{#each args}}
        - {{this}}
        {{/each}}
        {{/if}}
        {{#if hasPorts}}
        ports:
        {{#each ports}}
        - containerPort: {{internalPort}}
        {{/each}}
        {{/if}}
        {{#if hasAnyEnv}}
        envFrom:
        - configMapRef:
            name: {{name}}-env
        {{/if}}
        {{#if hasAnySecrets}}
        - secretRef:
            name: {{name}}-secrets
        {{/if}}
      terminationGracePeriodSeconds: 180