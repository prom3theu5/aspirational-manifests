---
apiVersion: v1
kind: Service
metadata:
  name: {{name}}
spec:
  type: {{serviceType}}
  selector:
    app: {{name}}
  ports:
  {{#if hasCustomPorts}}
  {{#each ports}}
  - name: {{name}}
    port: {{port}}
    targetPort: {{port}}
  {{/each}}
  {{else}}
  - name: http
    port: 8080
    targetPort: 8080
  {{/if}}